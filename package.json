{
  "type": "module",
  "name": "jira-ticket-copier",
  "version": "0.1.10",
  "description": "Copy JIRA ticket info to clipboard from ticket pages.",
  "main": "src/content.js",
  "scripts": {
    "build": "vite build && node copy-icons.mjs",
    "package": "npm run build && zip -r jira-ticket-copier.zip manifest.json dist/ README.md packaging_instructions.txt",
    "lint": "eslint src --ext .js",
    "test": "jest --env=jsdom src/*.test.js",
    "prepare": "husky install",
    "release": "standard-version",
    "validate-manifest": "node .github/workflows/validate-manifest.js"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.0.0",
    "eslint": "^9.31.0",
    "husky": "^9.1.7",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.1.2",
    "standard-version": "^9.5.0",
    "vite": "^7.0.5"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      ".*\\.js$": "babel-jest"
    }
  }
}
