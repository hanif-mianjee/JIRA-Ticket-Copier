{
  "manifest_version": 3,
  "name": "JIRA Ticket Copier",
  "version": "0.1.8",
  "description": "Copy JIRA ticket info (ID, status, title) to clipboard from ticket pages.",
  "permissions": [
    "scripting",
    "activeTab",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://*.atlassian.net/browse/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.atlassian.net/browse/*"
      ],
      "js": [
        "dist/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Copy JIRA Ticket Info"
  },
  "icons": {
    "16": "dist/icons/icon16.png",
    "48": "dist/icons/icon48.png",
    "128": "dist/icons/icon128.png"
  }
}
